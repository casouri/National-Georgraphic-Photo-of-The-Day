#!/bin/bash

PICTURES_DIR=~/Pictures/ngpd

# ====================
# =     FUNCTION     =
# ====================

# keep getting url until get the valuable url(not nil)
function get_page {
echo "# Get website page for url"
wget --quiet -O - http://www.nationalgeographic.com/photography/photo-of-the-day/ | grep -m 1 http://yourshot.nationalgeographic.com/u/.*/ -o > /tmp/pic_url
}

function clean_up {
echo "# Clean up temporary files"
if [ -e "/tmp/pic_url" ]; then
rm /tmp/pic_url
fi
if [ -e "/tmp/ngpd_epx.jpeg" ]; then
rm /tmp/ngpd_epx.jpeg
fi
if [ -e "/tmp/ngpd_ept.jpeg" ]; then
rm /tmp/ngpd_ept.jpeg
fi
}

# ====================
# =       MAIN       =
# ====================

TODAY=$(date +'%Y%m%d')

if [ ! -e $PICTURES_DIR/ ]; then
echo "# First time using, setting up."
mkdir $PICTURES_DIR
fi

get_page

PICURL=`/bin/cat /tmp/pic_url`
PICURL="${PICURL:0:${#PICURL} - 2}"

# "Picture URL is: $PICURL"

echo "# Download picture"
wget --quiet $PICURL -O $PICTURES_DIR/${TODAY}_NGPD.jpeg

chmod 666 $PICTURES_DIR/${TODAY}_NGPD.jpeg
# Save picture for export to desktop picture, for osascript would not take substutution of variable
cp $PICTURES_DIR/${TODAY}_NGPD.jpeg /tmp/ngpd_ept.jpeg
cp $PICTURES_DIR/${TODAY}_NGPD.jpeg /tmp/ngpd_epx.jpeg

# if your set wallpaper with the same path but different content,
# it will NOT change, so I just make it set wallpaper to different path
echo "# Set picture as wallpaper"
osascript -e 'tell application "Finder" to set desktop picture to "/tmp/ngpd_ept.jpeg" as POSIX file'
osascript -e 'tell application "Finder" to set desktop picture to "/tmp/ngpd_epx.jpeg" as POSIX file'

clean_up

# say "Job's done."
